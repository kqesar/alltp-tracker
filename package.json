{
  "name": "alltp-tracker",
  "version": "2.3.18",
  "private": false,
  "description": "A tracker for Zelda a Link to the Past Randomizer",
  "bugs": {
    "url": "https://github.com/kqesar/alltp-tracker/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kqesar/alltp-tracker.git"
  },
  "license": "MIT",
  "author": "KqesaR",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git-cz",
    "coverage": "node scripts/show-coverage.js",
    "dev": "vite",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepare": "husky",
    "preview": "vite preview",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "sort-package": "sort-package-json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:show": "vitest run --coverage && node scripts/show-coverage.js"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "public/**/*.{js,jsx,ts,tsx,json,css}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "sort-package-json": "^3.6.0",
    "standard-version": "^9.5.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
